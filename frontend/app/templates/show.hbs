{{#paper-dialog class="flex-85" clickOutsideToClose=false}}
	{{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>Edit Contact</h2>
        <span class="flex"></span>
        <LinkTo @route="index">{{#paper-button iconButton=true}}{{paper-icon icon="close"}}{{/paper-button}}</LinkTo>
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}
	{{#paper-dialog-content}}
	{{#paper-form onSubmit=(action "editContact") as |form|}}
	
		<div class="layout-row">
			<div class="layout-column flex-80">
				{{paper-input label="First name" type="text" value=this.model.first_name onChange=(action (mut this.model.first_name)) icon="person" required=true}}
			</div>
			<div class="layout-column flex-20"></div>
		</div>
		<div class="layout-row">
			<div class="layout-column flex-80">
				{{paper-input label="Last name" type="text" value=this.model.last_name onChange=(action (mut this.model.last_name)) icon="person" required=true}}
			</div>
			<div class="layout-column flex-20"></div>
		</div>
		<div class="layout-row">
			<div class="layout-column flex-80">
				{{paper-input label="Address" type="text" value=this.model.address onChange=(action (mut this.model.address)) icon="place" required=true}}
			</div>
			<div class="layout-column flex-20"></div>
		</div>
		<div class="layout-row">
			<div class="layout-column flex-80">
				{{paper-input label="Phone number" type="text" value=this.model.phone_number onChange=(action (mut this.model.phone_number)) icon="phone" required=true}}
			</div>
			<div class="layout-column flex-20"></div>
		</div>
	
	{{#paper-dialog-actions class="layout-row"}}
		<LinkTo @route="index">{{#paper-button raised=true warn=true onClick=(action "deleteContact" this.model.id)}}Delete{{/paper-button}}</LinkTo>
      	<span class="flex"></span>
      	<LinkTo @route="index">{{#paper-button}}Cancel{{/paper-button}}</LinkTo>
     	{{#form.submit-button raised=true primary=true}}Edit{{/form.submit-button}}
    {{/paper-dialog-actions}}
	{{/paper-form}}

	{{/paper-dialog-content}}
{{/paper-dialog}}